<% posts.each do |x| %>
<div class="review list-display">
    <a href="/post/<%= x.id %>">
        <div class="review-header">
            <h3><%= x.title %></h3>
            <ul>
                <li><%= x.username %></li>
                <li><%= x.created_at %></li>
                <li><%= render partial: "index/stars", :locals => {:rate => x.rating} %></li>
            </ul>
        </div>
        <div class="review-body">
            <p>
                <%= if x.post.length <= 200 then x.post else "#{x.post[0..200]}..." end %>
            </p>
        </div>
    </a>
</div>
<% end %>
