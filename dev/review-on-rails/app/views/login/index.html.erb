<section class="container">
    <%= form_for @login, url: "/login/run", method: "post", :html => {:id => "login-form", :class => "user-form"}  do |l| %>
        <h3>Login and Review</h3>
        <div class="form-group">
            <%= label_tag('Username') %>
            <%= l.text_field :username, :class => "form-control" %>
        </div>
        <div class="form-group">
            <%= label_tag('Password') %>
            <%= l.password_field :password, :class => "form-control" %>
        </div>
        <div class="form-group">
            <%= submit_tag("Login", :class=> "btn btn-info") %>
        </div>
        <% if flash[:message] %>
        <div class="alert alert-danger">
            <%= flash[:message] %>
        </div>
        <% end %>
    <% end %>
</section>
