<section class="container">
    <%= form_for @login, url: "/login/run", method: "post" do |l| %>
        <h3>Login</h3>
        <div class="form-group">
            <%= label_tag('Username') %>
            <%= l.text_field :username, :class => "form-control" %>
        </div>
        <div class="form-group">
            <%= label_tag('Password') %>
            <%= l.password_field :password, :class => "form-control" %>
        </div>
        <div class="form-group">
            <%= submit_tag("Submit", :class=> "btn btn-success") %>
        </div>
        <% if flash[:message] %>
        <div class="alert alert-danger">
            <%= flash[:message] %>
        </div>
        <% end %>
    <% end %>
</section>
