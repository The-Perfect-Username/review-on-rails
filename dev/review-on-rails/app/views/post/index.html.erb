<section class="container">
    <%= form_for @post, url: "/post/create", method: "post" do |p| %>
        <h3>Submit new review</h3>
        <% if flash[:error] %>
            <%= flash[:error] %>
        <% end %>
        <div class="form-group">
            <%= label_tag('Title') %>
            <span id="titleCharacterCounter"></span>
            <%= p.text_field :title, :class => "form-control", :maxlength => 100 %>
        </div>
        <div class="form-group">
            <%= label_tag('Review') %>
            <span id="postCharacterCounter"></span>
            <%= p.text_area :post, :class => "form-control", :maxlength => 1000 %>
        </div>
        <div class="form-group">
            <%= label_tag('Rating') %>
            <%= p.select "rating", options_for_select(1..5, 1), {}, {:class => "form-control"} %>
        </div>
        <div class="form-group">
            <%= submit_tag("Submit", :class=> "btn btn-success") %>
        </div>
    <% end %>
</section>
