<div id="commentsContainer">
    <% comments.each do |c| %>
        <div class="comment">
            <div class="comment-header">
                <p class="username">
                    <%= c.username %>
                </p>
                <p class="date-time">
                    <%= c.created_at %>
                </p>
            </div>
            <div class="comment-body">
                <p><%= c.comment %></p>
            </div>
        </div>
    <% end %>
</div>
